<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FiltrosActivity"
    android:background="@drawable/animation_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTituloFiltros"
            android:textSize="36sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_chettan_bold"
            android:text="Filtros" />

        <TextView
            android:id="@+id/tvDonde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_chettan_bold"
            android:text="¿Dónde?" />

        <Spinner
            android:id="@+id/spinnerLugares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTipo"
            android:fontFamily="@font/baloo_chettan_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Qué tipo de gimnasio?" />

        <Spinner
            android:id="@+id/spinnerTipos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvExtras"
            android:fontFamily="@font/baloo_chettan_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opciones extras" />

        <Spinner
            android:id="@+id/spinnerExtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>