<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_list"
    android:orientation="vertical"
    android:weightSum="15">

    <TextView
        android:id="@+id/idConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_chettan_bold"
        android:text="Settings"
        android:textSize="36sp"
        android:padding="13dp"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/txtDireccio"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_chettan_bold"

            android:text="Name:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_chettan_bold"
            android:text="Gender:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSexe"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_chettan_bold"

            android:text="Phone number:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="phone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtEdat"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_chettan_bold"

            android:text="Email:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtEdat5"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_chettan_bold"

            android:text="Address:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPostalAddress" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNova"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_chettan_bold"

            android:text="New password:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvIntroduzcaPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_chettan_regular"
        android:text="Please enter your current password to save your changes"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:padding="15dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_weight="0" />

    <LinearLayout
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:padding="7dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAntiga"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_chettan_bold"

            android:text="Password:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_weight="0" />


    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_weight="3"
        android:weightSum="6">

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/rounded_btn"
            android:fontFamily="@font/baloo_chettan"
            android:onClick="action3"
            android:padding="15dp"
            android:text="Save changes"
            android:layout_gravity="center"
            android:textColor="#FFFFFF" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnBack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/rounded_btn"
            android:fontFamily="@font/baloo_chettan"
            android:onClick="action5"
            android:layout_gravity="center"

            android:padding="15dp"
            android:text="Back"
            android:textColor="#FFFFFF" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>