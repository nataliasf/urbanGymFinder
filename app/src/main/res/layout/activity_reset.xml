<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ResetActivity"
android:background="@drawable/animation_list">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:padding="10dp"
    android:weightSum="16">

    <TextView
        android:id="@+id/tvTituloFiltros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_chettan_bold"
        android:gravity="center"
        android:text="Forgot your password?"
        android:padding="5dp"
        android:textSize="36sp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tvEmail"
        android:fontFamily="@font/baloo_chettan_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_weight="1"

        android:text="To reset your password, enter your email, press reset password and check your mail for futher instructions" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/email_adress"
        android:inputType="textEmailAddress"
        />


    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_weight="9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="6">

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_btn"
            android:fontFamily="@font/baloo_chettan"
            android:text="Reset password"
            android:layout_weight="1.5"
            android:textColor="#FFFFFF" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/backBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_btn"
            android:fontFamily="@font/baloo_chettan"
            android:text="Back"
            android:layout_weight="1.5"
            android:textColor="#FFFFFF" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_weight="8.3"/>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>